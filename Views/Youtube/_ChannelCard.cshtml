@model Dashboard.Models.youtube.ChannelYoutube
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Id != "")
{
    <div class="card text-center">
        <img class="card-img-top" src=@Model.Banner alt="Card image cap">
        <h5 class="card-title">@Model.Title</h5>
        <div class="card-body">
            <p class="card-text">@Model.SubCount</p>
            <p class="card-text"><small class="text-muted">Subscribers</small></p>
        </div>
    </div>
}